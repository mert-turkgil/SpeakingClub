@model TagEditViewModel
@{
    ViewData["Title"] = "Edit Tag";
}
<section class="container my-4">
<h2>Edit Tag</h2>

<form asp-action="TagEdit" method="post">
    <input type="hidden" asp-for="TagId" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Associated Blogs</label>
        <select asp-for="SelectedBlogIds" asp-items="Model.AvailableBlogs" multiple class="form-control" size="8"></select>
    </div>

    <div class="form-group">
        <label>Associated Quizzes</label>
        <select asp-for="SelectedQuizIds" asp-items="Model.AvailableQuizzes" multiple class="form-control" size="8"></select>
    </div>

    <button type="submit" class="btn btn-success">Update Tag</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
