@model SpeakingClub.Models.RoleCreateModel

@{
    ViewData["Title"] = "Create Role";
    Layout = "_Layout";
}

<div style="height: 80vh;" class="card shadow">
    <div class="card-header bg-primary text-white">
        <h3 class="card-title">Create New Role</h3>
    </div>
    <div class="card-body">
        <form asp-action="RoleCreate" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-controller="Admin" asp-route-scrollTo="RoleManagement" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}