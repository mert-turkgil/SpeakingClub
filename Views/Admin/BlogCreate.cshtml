@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/swiper/swiper-bundle.min.js"></script>
    <script src="https://cdn.ckeditor.com/ckeditor5/44.3.0/ckeditor5.umd.js"></script>
    <script src="https://cdn.ckbox.io/ckbox/2.6.1/ckbox.js"></script>
    <script src="~/js/ckeditor.js"></script>

    <script>
        $(document).ready(function() {
            // ===================================
            // Tab Switching
            // ===================================
            $('.custom-tab').on('click', function() {
                const targetTab = $(this).data('tab');
                
                // Update active tab
                $('.custom-tab').removeClass('active');
                $(this).addClass('active');
                
                // Update active content
                $('.tab-pane').removeClass('active');
                $('#tab-' + targetTab).addClass('active');
            });

            // ===================================
            // Character Counters
            // ===================================
            function setupCharCounter(selector, maxLength) {
                const $input = $(selector);
                const $counter = $('.char-counter[data-for="' + $input.attr('name') + '"]');
                
                function updateCounter() {
                    const length = $input.val().length;
                    $counter.text(length + '/' + maxLength);
                    
                    $counter.removeClass('warning danger');
                    if (length > maxLength * 0.9) {
                        $counter.addClass('danger');
                    } else if (length > maxLength * 0.75) {
                        $counter.addClass('warning');
                    }
                }
                
                $input.on('input', updateCounter);
                updateCounter();
            }
            
            // Initialize character counters
            setupCharCounter('input[name="Title"]', 200);
            setupCharCounter('textarea[name="Description"]', 250);
            setupCharCounter('input[name="Slug"]', 200);
            setupCharCounter('input[name="MetaTitle"]', 100);
            setupCharCounter('textarea[name="MetaDescription"]', 160);
            setupCharCounter('input[name="FocusKeyphrase"]', 200);
            setupCharCounter('input[name="MetaKeywords"]', 300);
            setupCharCounter('input[name="OgTitle"]', 200);
            setupCharCounter('textarea[name="OgDescription"]', 300);
            setupCharCounter('input[name="TitleTR"]', 200);
            setupCharCounter('textarea[name="DescriptionTR"]', 250);
            setupCharCounter('input[name="TitleDE"]', 200);
            setupCharCounter('textarea[name="DescriptionDE"]', 250);

            // ===================================
            // Slug Auto-Generation & Preview
            // ===================================
            function generateSlug(text) {
                return text.toLowerCase()
                    .replace(/ç/g, 'c')
                    .replace(/ğ/g, 'g')
                    .replace(/ı/g, 'i')
                    .replace(/ö/g, 'o')
                    .replace(/ş/g, 's')
                    .replace(/ü/g, 'u')
                    .replace(/ä/g, 'a')
                    .replace(/[^a-z0-9\s\-]/g, '')
                    .replace(/\s+/g, '-')
                    .replace(/\-+/g, '-')
                    .replace(/^\-+|\-+$/g, '')
                    .substring(0, 100);
            }

            $('input[name="Title"]').on('input', function() {
                if ($('input[name="Slug"]').val() === '') {
                    const slug = generateSlug($(this).val());
                    $('#slugPreview').text('https://almanca-konus.com/yazilar/' + (slug || 'your-slug-here'));
                }
            });

            $('input[name="Slug"]').on('input', function() {
                const slug = $(this).val() || 'your-slug-here';
                $('#slugPreview').text('https://almanca-konus.com/yazilar/' + slug);
            });

            // ===================================
            // SEO Score Calculator
            // ===================================
            function calculateSEOScore() {
                let score = 0;
                let tips = [];
                
                // Title check (15 points)
                const title = $('input[name="Title"]').val();
                if (title.length >= 50 && title.length <= 60) {
                    score += 15;
                } else if (title.length > 0) {
                    score += 8;
                    tips.push('✓ Title should be 50-60 characters');
                }
                
                // Description check (15 points)
                const desc = $('textarea[name="Description"]').val();
                if (desc.length >= 140 && desc.length <= 160) {
                    score += 15;
                } else if (desc.length > 0) {
                    score += 8;
                    tips.push('✓ Description should be 140-160 characters');
                }
                
                // Meta description check (15 points)
                const metaDesc = $('textarea[name="MetaDescription"]').val();
                if (metaDesc.length >= 150 && metaDesc.length <= 160) {
                    score += 15;
                } else if (metaDesc.length > 0) {
                    score += 8;
                    tips.push('✓ Meta description should be 150-160 characters');
                } else {
                    tips.push('✗ Add a meta description');
                }
                
                // Slug check (10 points)
                const slug = $('input[name="Slug"]').val();
                if (slug.length > 0 && slug.length <= 50) {
                    score += 10;
                } else if (slug.length === 0) {
                    score += 5; // Will be auto-generated
                }
                
                // Keywords check (10 points)
                const keywords = $('input[name="FocusKeyphrase"]').val();
                if (keywords.length > 0) {
                    score += 10;
                } else {
                    tips.push('✗ Add a focus keyphrase');
                }
                
                // Image check (15 points)
                if ($('input[name="ImageFile"]').val()) {
                    score += 15;
                } else {
                    tips.push('✗ Add a cover image for social sharing');
                }
                
                // Content check (20 points) - simplified
                score += 10;
                
                // Update score display
                const $scoreElem = $('#seoScore');
                const $tipsElem = $('#seoTips');
                
                $scoreElem.text(score + ' / 100');
                $scoreElem.removeClass('poor warning good');
                
                if (score >= 80) {
                    $scoreElem.addClass('good');
                } else if (score >= 60) {
                    $scoreElem.addClass('warning');
                } else {
                    $scoreElem.addClass('poor');
                }
                
                if (tips.length > 0) {
                    $tipsElem.html('<small>' + tips.join('<br>') + '</small>');
                } else {
                    $tipsElem.html('<small>✓ Great! Your SEO looks good.</small>');
                }
            }

            // Recalculate on key inputs
            $('input[name="Title"], textarea[name="Description"], textarea[name="MetaDescription"], input[name="FocusKeyphrase"], input[name="Slug"]').on('input', calculateSEOScore);
            $('input[name="ImageFile"]').on('change', calculateSEOScore);

            // Initial calculation
            calculateSEOScore();

            // ===================================
            // Cover Image Preview
            // ===================================
            window.previewImage = function(event) {
                const file = event.target.files[0];
                
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        $('#coverPreview').attr('src', e.target.result);
                        $('#imagePreviewContainer').show();
                    };
                    reader.readAsDataURL(file);
                } else {
                    $('#imagePreviewContainer').hide();
                }
            };

            // ===================================
            // Quiz Dropdown Handler
            // ===================================
            $('#quizDropdown').on('change', function () {
                var selectedQuizId = $(this).val();
                var dropdown = $('#quizQuestionsDropdown');
                dropdown.empty();
                dropdown.append($('<option>').val("").text("-- Select a Question --"));
                
                if (selectedQuizId) {
                    $.ajax({
                        url: '@Url.Action("GetQuizQuestions", "Admin")',
                        type: 'GET',
                        data: { quizId: selectedQuizId },
                        success: function (data) {
                            $.each(data, function (index, question) {
                                dropdown.append($('<option>').val(question.questionId).text(question.questionText));
                            });
                        },
                        error: function (xhr, status, error) {
                            console.error("Error fetching quiz questions: " + error);
                        }
                    });
                }
            });

            // ===================================
            // Collapsible Sections
            // ===================================
            window.toggleCollapsible = function(sectionId) {
                const trigger = $('.collapsible-trigger:has(#' + sectionId + '-icon)');
                const content = $('#' + sectionId + '-content');
                const icon = $('#' + sectionId + '-icon');
                
                trigger.toggleClass('active');
                content.toggleClass('active');
                icon.toggleClass('rotated');
            };

            // ===================================
            // Form Validation
            // ===================================
            $('#blogForm').on('submit', function(e) {
                let isValid = true;
                let errors = [];

                if ($('input[name="Title"]').val().trim() === '') {
                    errors.push('Blog title is required');
                    isValid = false;
                }

                if ($('input[name="Author"]').val().trim() === '') {
                    errors.push('Author name is required');
                    isValid = false;
                }

                if (!isValid) {
                    e.preventDefault();
                    alert('Please fix the following errors:\n\n' + errors.join('\n'));
                    return false;
                }
            });
        });
    </script>
