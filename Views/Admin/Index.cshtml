@section Scripts{
    <script>
        $(document).ready(function () {
            // Handle "Change" button click
            $(".edit-btn").on("click", function () {
                const key = $(this).data("key");
                const value = $(this).data("value");
                const comment = $(this).data("comment");
                const lang = $("#langSelect").val();

                $("#translationKey").val(key);
                $("#translationValue").val(value);
                $("#translationComment").val(comment);
                $("#translationLang").val(lang);

                $("#editTranslationModal").modal("show");
            });

            // Handle form submit (AJAX)
            $("#editTranslationForm").on("submit", function (e) {
                e.preventDefault();

                $.ajax({
                    url: '@Url.Action("EditTranslation", "Admin")',
                    type: "POST",
                    data: $(this).serialize(),
                    success: function (res) {
                        if (res.success) {
                            alert(res.message);
                            location.reload(); // reload table to see updates
                        } else {
                            alert("Error: " + res.message);
                        }
                    },
                    error: function () {
                        alert("Something went wrong.");
                    }
                });
            });
        });
    </script>
    <script>
    $(document).ready(function () {
        // Check if mark plugin is loaded
        console.log("mark plugin:", typeof $.fn.mark);

        // Initialize DataTable
        var table = $('#localizationTable').DataTable({
            language: { search: "Search in table:" },
            responsive: true
        });

        // Highlight search terms
        table.on('draw', function () {
            var body = $(table.table().body());
            body.unmark(); // remove previous highlights
            var searchTerm = table.search();
            if (searchTerm) {
                body.mark(searchTerm, {
                    "separateWordSearch": true
                });
            }
        });

        // Language selector
        $("#langSelect").change(function () {
            window.location.href = `?resourceLang=${this.value}`;
        });
    });
    </script>
    <script>
        $(document).ready(function() {
