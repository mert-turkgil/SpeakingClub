@model WordEditViewModel
@section Css{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css">
    <style>
        .select2-container--default .select2-selection--multiple {
            border: 1px solid #dee2e6;
            padding: 0.375rem 0.75rem;
        }
        .form-floating textarea {
            min-height: 120px;
            resize: vertical;
        }
        .ck-editor__editable {
            min-height: 150px;
        }
        .editor-label {
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: #495057;
        }
    </style>
}

<div class="container-xxl animate__animated animate__fadeIn mb-5">
    <div style="margin-top: 5vh;" class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">
                <i class="fas fa-edit me-2"></i>Edit Word
            </h3>
        </div>
        
        <div class="card-body">
            <form id="editForm" asp-action="WordEdit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="WordId" />
                <div class="row g-4">
                    <!-- Term Field -->
                    <div class="col-12">
                        <div class="form-floating mb-3">
                            <input asp-for="Term" class="form-control" placeholder="Enter term" />
                            <label asp-for="Term"></label>
                            <span asp-validation-for="Term" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Definition Field with CKEditor -->
                    <div class="col-12">
                        <div class="mb-3">
                            <label class="editor-label">Definition *</label>
                            <textarea asp-for="Definition" id="definitionEditor"></textarea>
                            <span asp-validation-for="Definition" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Pronunciation Field with CKEditor -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="editor-label">Pronunciation</label>
                            <textarea asp-for="Pronunciation" id="pronunciationEditor"></textarea>
                            <span asp-validation-for="Pronunciation" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Example Field with CKEditor -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="editor-label">Example</label>
                            <textarea asp-for="Example" id="exampleEditor"></textarea>
                            <span asp-validation-for="Example" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Synonyms Field with CKEditor -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="editor-label">Synonyms</label>
                            <textarea asp-for="Synonyms" id="synonymsEditor"></textarea>
                            <span asp-validation-for="Synonyms" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Origin Field with CKEditor -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="editor-label">Origin</label>
                            <textarea asp-for="Origin" id="originEditor"></textarea>
                            <span asp-validation-for="Origin" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Quiz Selection -->
                <div class="mb-4">            
                    <label class="form-label fw-bold">Associated Quizzes</label>
                    <span asp-validation-for="SelectedQuizIds" class="text-danger"></span>
                    <select asp-for="SelectedQuizIds" 
                            asp-items="Model.AvailableQuizzes" 
                            class="form-select select2-multiple" 
                            multiple="multiple" 
                            data-placeholder="Select related quizzes">
                    </select>
                </div>

                <!-- Advanced Options -->
                <div class="accordion mb-4" id="advancedOptions">
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" 
                                    data-bs-toggle="collapse" 
                                    data-bs-target="#advancedCollapse">
                                <i class="fas fa-cogs me-2"></i>Advanced Options
                            </button>
                        </h2>
                        <div id="advancedCollapse" class="accordion-collapse collapse" 
                             data-bs-parent="#advancedOptions">
                            <div class="accordion-body">
                                <div class="form-check form-switch">
                                    <input asp-for="IsFromApi" class="form-check-input" />
                                    <label asp-for="IsFromApi" class="form-check-label"></label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-save me-2"></i>Update Word
                    </button>
                    <a asp-controller="Admin" asp-route-scrollTo="WordsManagement" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                        <i class="fas fa-undo me-2"></i>Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <script src="https://cdn.ckeditor.com/ckeditor5/41.1.0/classic/ckeditor.js"></script>
    <script>
        let definitionEditor, pronunciationEditor, exampleEditor, synonymsEditor, originEditor;

        $(document).ready(function() {
            // Initialize CKEditor for Definition
            ClassicEditor
                .create(document.querySelector('#definitionEditor'), {
                    toolbar: ['bold', 'italic', 'underline', '|', 'bulletedList', 'numberedList', '|', 'link', '|', 'undo', 'redo'],
                    placeholder: 'Enter definition...'
                })
                .then(editor => {
                    definitionEditor = editor;
                    editor.setData(@Html.Raw(Json.Serialize(Model.Definition ?? "")));
                })
                .catch(error => {
                    console.error('Definition editor error:', error);
                });

            // Initialize CKEditor for Pronunciation
            ClassicEditor
                .create(document.querySelector('#pronunciationEditor'), {
                    toolbar: ['bold', 'italic', '|', 'undo', 'redo'],
                    placeholder: 'Enter pronunciation guide...'
                })
                .then(editor => {
                    pronunciationEditor = editor;
                    editor.setData(@Html.Raw(Json.Serialize(Model.Pronunciation ?? "")));
                })
                .catch(error => {
                    console.error('Pronunciation editor error:', error);
                });

            // Initialize CKEditor for Example
            ClassicEditor
                .create(document.querySelector('#exampleEditor'), {
                    toolbar: ['bold', 'italic', 'underline', '|', 'link', '|', 'undo', 'redo'],
                    placeholder: 'Enter example sentence...'
                })
                .then(editor => {
                    exampleEditor = editor;
                    editor.setData(@Html.Raw(Json.Serialize(Model.Example ?? "")));
                })
                .catch(error => {
                    console.error('Example editor error:', error);
                });

            // Initialize CKEditor for Synonyms
            ClassicEditor
                .create(document.querySelector('#synonymsEditor'), {
                    toolbar: ['bold', 'italic', '|', 'bulletedList', '|', 'undo', 'redo'],
                    placeholder: 'Enter synonyms...'
                })
                .then(editor => {
                    synonymsEditor = editor;
                    editor.setData(@Html.Raw(Json.Serialize(Model.Synonyms ?? "")));
                })
                .catch(error => {
                    console.error('Synonyms editor error:', error);
                });

            // Initialize CKEditor for Origin
            ClassicEditor
                .create(document.querySelector('#originEditor'), {
                    toolbar: ['bold', 'italic', '|', 'link', '|', 'undo', 'redo'],
                    placeholder: 'Enter word origin...'
                })
                .then(editor => {
                    originEditor = editor;
                    editor.setData(@Html.Raw(Json.Serialize(Model.Origin ?? "")));
                })
                .catch(error => {
                    console.error('Origin editor error:', error);
                });

            // Initialize Select2 with preselected values
            $('.select2-multiple').select2({
                width: '100%',
                theme: 'bootstrap-5',
                closeOnSelect: false
            }).val(@Json.Serialize(Model.SelectedQuizIds)).trigger('change');

            // Form submission - sync CKEditor data
            $('#editForm').on('submit', function(e) {
                if (definitionEditor) {
                    $('#Definition').val(definitionEditor.getData());
                }
                if (pronunciationEditor) {
                    $('#Pronunciation').val(pronunciationEditor.getData());
                }
                if (exampleEditor) {
                    $('#Example').val(exampleEditor.getData());
                }
                if (synonymsEditor) {
                    $('#Synonyms').val(synonymsEditor.getData());
                }
                if (originEditor) {
                    $('#Origin').val(originEditor.getData());
                }
            });

            // Form validation
            $('#editForm').validate({
                rules: {
                    Term: { required: true, maxlength: 100 },
                    Definition: { required: true }
                },
                errorPlacement: function(error, element) {
                    error.addClass('small text-danger mt-1');
                    if (element.hasClass('ck-editor__editable')) {
                        error.insertAfter(element.closest('.mb-3'));
                    } else {
                        error.insertAfter(element.closest('.form-floating, .mb-3'));
                    }
                }
            });

            // GSAP animation
            gsap.from(".card", {
                duration: 0.8,
                y: 50,
                opacity: 0,
                ease: "power2.out"
            });
        });
    </script>
}