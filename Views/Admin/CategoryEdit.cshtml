@model CategoryEditViewModel
@{
    ViewData["Title"] = "Edit Category";
}
<section class="container my-4">
    <h2>Edit Category</h2>

    <form asp-action="CategoryEdit" method="post">
        <input type="hidden" asp-for="CategoryId" />

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Associated Blogs</label>
            <select asp-for="SelectedBlogIds" asp-items="Model.AvailableBlogs" multiple class="form-control" size="8"></select>
        </div>

        <div class="form-group">
            <label>Associated Quizzes</label>
            <select asp-for="SelectedQuizIds" asp-items="Model.AvailableQuizzes" multiple class="form-control" size="8"></select>
        </div>

        <button type="submit" class="btn btn-success">Update Category</button>
        <a asp-controller="Admin" asp-route-scrollTo="CategoryManagement" asp-action="Index" class="btn btn-secondary">Back</a>
    </form>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
