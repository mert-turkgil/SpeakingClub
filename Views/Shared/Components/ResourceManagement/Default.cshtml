@model SpeakingClub.Models.LocalizationViewModel


        <div class="mb-3">
            <select id="langSelect" class="form-select">
                @foreach (var lang in Model.AvailableLanguages)
                {
                    if (lang == Model.CurrentLanguage)
                    {
                        <option value="@lang" selected="selected">@lang</option>
                    }
                    else
                    {
                        <option value="@lang">@lang</option>
                    }
                }
            </select>
        </div>

        <div class="table-responsive">
            <table id="localizationTable" class="table table-striped">
                <thead>
                    <tr>
                        <th>Key</th>
                        <th>Value</th>
                        <th>Comment</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Translations)
                    {
                        <tr>
                                <td>
                                    @item.Key
                                </td>
                                <td>
                                    @item.Value
                                </td>
                                <td>
                                    @item.Comment
                                </td>
                                <td>
                                    <button type="button" 
                                            class="btn btn-success btn-sm edit-btn"
                                            data-key="@item.Key"
                                            data-value="@item.Value"
                                            data-comment="@item.Comment">
                                        Change
                                    </button>
                                </td>
                        </tr>
                    }
                </tbody>
            </table>
<!-- Edit Translation Modal -->
<div class="modal fade" id="editTranslationModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form id="editTranslationForm" method="post">
        @Html.AntiForgeryToken()
        <div class="modal-header">
          <h5 class="modal-title">Edit Translation</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body">
          <input type="hidden" name="name" id="translationKey" />
          <input type="hidden" name="lang" id="translationLang" value="@Model.CurrentLanguage" />

          <div class="mb-3">
            <label for="translationValue" class="form-label">Value</label>
            <input type="text" class="form-control" name="value" id="translationValue" />
          </div>

          <div class="mb-3">
            <label for="translationComment" class="form-label">Comment</label>
            <input type="text" class="form-control" name="comment" id="translationComment" />
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
      </form>
    </div>
  </div>
</div>
