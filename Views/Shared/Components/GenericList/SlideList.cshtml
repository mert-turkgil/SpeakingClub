@using SpeakingClub.Entity
@model IEnumerable<SlideShow>

@section Css {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <!-- Animate.css -->
    <link rel="stylesheet" href="~/lib/animate/animate.min.css" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Font Awesome (all icons) -->
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/swiper/swiper-bundle.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <style>
        .table-container {
            margin-top: 20px;
            animation: fadeInUp 1s ease-in-out;
        }

        .header-section {
            text-align: center;
            margin-bottom: 30px;
        }

        .header-section h2 {
            color: #ff7b00;
            font-size: 2.5rem;
            font-weight: bold;
            text-transform: uppercase;
            animation: fadeInDown 1s ease-in-out;
        }

        .action-btn {
            padding: 5px 10px;
            border: none;
            color: #fff;
            border-radius: 5px;
            cursor: pointer;
            font-size: 0.9rem;
            transition: all 0.3s ease;
        }

        .edit-btn {
            background-color: #17a2b8;
        }

        .edit-btn:hover {
            background-color: #138496;
            transform: scale(1.05);
        }

        .delete-btn {
            background-color: #dc3545;
        }

        .delete-btn:hover {
            background-color: #c82333;
            transform: scale(1.05);
        }

        .create-btn {
            background-color: #28a745;
            color: #fff;
            font-weight: bold;
            padding: 10px 15px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .create-btn:hover {
            background-color: #218838;
            transform: scale(1.05);
            text-decoration: none;
            color: #fff;
        }

        .table th,
        .table td {
            text-align: center;
            vertical-align: middle;
        }

        .image-preview {
            width: 120px;
            height: 70px;
            object-fit: cover;
            border-radius: 5px;
            border: 1px solid #ddd;
        }
    </style>
}

<div class="container table-container">
    <!-- Header Section -->
    <div class="header-section">
        <a asp-action="CarouselCreate" class="btn btn-info w-100 mb-3">
            <i class="fas fa-plus"></i> Create New Carousel
        </a>
    </div>

    <!-- Table Section -->
    <table id="carouselTable" class="table table-striped table-bordered">
        <thead class="bg-dark text-white">
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Image</th>
                <th>Date Added</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (SlideShow carousel in Model)
            {
                <tr class="animate__animated animate__fadeInUp">
                    <td>@carousel.SlideId</td>
                    <td>@carousel.CarouselTitle</td>
                    <td>@carousel.CarouselDescription</td>
                    <td>
                        @if (!string.IsNullOrEmpty(carousel.CarouselImage))
                        {
                            <img src="~/img/@carousel.CarouselImage" width="120" height="70" class="image-preview" alt="Carousel Image" />
                        }
                        else
                        {
                            <span>No Image</span>
                        }
                    </td>
                    <td>@carousel.DateAdded.ToString(format: "yyyy-MM-dd")</td>
                    <td>
                        <a asp-action="CarouselEdit" asp-route-id="@carousel.SlideId" 
                           class="btn btn-warning edit-btn">
                           <i class="fas fa-edit"></i> Edit
                        </a>

                        <form asp-action="CarouselDelete" asp-route-id="@carousel.SlideId" 
                              method="post" onsubmit="return confirm('Are you sure you want to delete this carousel?');" 
                              style="display: inline;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger delete-btn">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
        <!-- 2. Bootstrap Bundle (uses jQuery) -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- 3. DataTables Core (requires jQuery) -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <!-- 4. DataTables Bootstrap 5 Integration -->
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
}