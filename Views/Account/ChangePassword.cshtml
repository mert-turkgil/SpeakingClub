@model ChangePasswordViewModel
@inject LanguageService _localization

@section Css {
    <link rel="stylesheet" href="~/lib/animate.css/animate.min.css" />
    <style>
        .password-container {
            max-width: 600px;
            margin: auto;
            padding-top: 40px;
        }

        .card-hover {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 20px rgba(0,0,0,0.1);
        }

        .btn-custom {
            border-radius: 25px;
            padding: 8px 25px;
        }

        .form-label {
            font-weight: 600;
        }
    </style>
}

<div style="height: 70vh;" class="container password-container animate__animated animate__fadeIn my-5">

    <h2 class="mb-4 text-center fw-bold">@_localization.GetKey("ChangePassword_Title")</h2>

    <form method="post" class="card shadow-sm card-hover p-4 animate__animated animate__fadeInUp">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="mb-3">
            <label asp-for="CurrentPassword" class="form-label">@_localization.GetKey("CurrentPassword")</label>
            <input asp-for="CurrentPassword" type="password" class="form-control" placeholder="••••••">
            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="NewPassword" class="form-label">@_localization.GetKey("NewPassword")</label>
            <input asp-for="NewPassword" type="password" class="form-control" placeholder="••••••">
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="ConfirmNewPassword" class="form-label">@_localization.GetKey("ConfirmNewPassword")</label>
            <input asp-for="ConfirmNewPassword" type="password" class="form-control" placeholder="••••••">
            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary btn-custom w-100">@_localization.GetKey("UpdatePasswordButton")</button>
    </form>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/gsap/gsap.min.js"></script>
    <script>
        gsap.from("form", {
            opacity: 0,
            y: 50,
            duration: 1,
            ease: "power3.out"
        });
    </script>
}