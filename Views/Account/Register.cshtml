@model SpeakingClub.Models.RegisterViewModel
@inject LanguageService Localizer

@{
    ViewData["Title"] = Localizer.GetKey("Register_Title");
    var returnUrl = ViewData["ReturnUrl"] as string;
}

@section Css {
<style>
    .animated-form {
        display: flex;
        flex-direction: column;
        gap: 15px;
        background-color: #fff;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 8px 16px rgba(0,0,0,0.1);
        max-width: 600px;
        margin: auto;
    }

    .animated-title {
        font-size: 28px;
        color: royalblue;
        font-weight: 600;
        position: relative;
        padding-left: 30px;
    }

    .animated-title::before, .animated-title::after {
        content: "";
        position: absolute;
        border-radius: 50%;
        left: 0;
        background-color: royalblue;
    }

    .animated-title::before {
        width: 18px;
        height: 18px;
    }

    .animated-title::after {
        width: 18px;
        height: 18px;
        animation: pulse 1.2s infinite ease-in-out;
    }

    @@keyframes pulse {
        0% { transform: scale(1); opacity: 1; }
        100% { transform: scale(2); opacity: 0; }
    }
    
    /* Enhanced validation error styling */
    .validation-summary-errors {
        background-color: #fee;
        border-left: 4px solid #dc3545;
        padding: 15px;
        margin-bottom: 20px;
        border-radius: 8px;
        animation: slideIn 0.3s ease-out;
    }
    
    .validation-summary-errors ul {
        margin: 0;
        padding-left: 20px;
    }
    
    .validation-summary-errors li {
        color: #721c24;
        font-weight: 500;
        margin-bottom: 5px;
    }
    
    .text-danger {
        color: #dc3545 !important;
        font-size: 0.875rem;
        margin-top: 5px;
        display: block;
        font-weight: 500;
    }
    
    .form-control.input-validation-error {
        border-color: #dc3545;
        box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25);
    }
    
    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    /* Turnstile widget container */
    #turnstile-widget {
        min-height: 65px;
    }
</style>
}
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-warning mt-3">
        @Localizer.GetKey("WarningMessage_Login_UnderDevelopment")
    </div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}
@Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
<div style="min-height: 100vh;" class="container-xxl">
    <div class="row py-5">
        <div class="col">
    <form method="post" class="animated-form" id="registerForm">
        @if (!ViewData.ModelState.IsValid)
        {
        <div asp-validation-summary="All" class="alert alert-danger"></div>
        }
        @Html.AntiForgeryToken()
        <!-- Bot Detection Fields -->
        <input type="text" name="honeypot" style="display:none" autocomplete="off" tabindex="-1" />
        <input type="text" name="phone" style="display:none" autocomplete="off" tabindex="-1" />
        <input type="text" name="website" style="display:none" autocomplete="off" tabindex="-1" />
        <input type="hidden" name="_ts" id="registerTs" />
        <h2 class="animated-title">@Localizer.GetKey("Register_Header")</h2>
        <p class="text-muted">@Localizer.GetKey("Register_Subtitle")</p>

        <div class="row">
            <div class="col-md-6">
                <label asp-for="FirstName" class="form-label">@Localizer.GetKey("Label_FirstName")</label>
                <input asp-for="FirstName" class="form-control" placeholder="@Localizer.GetKey("Placeholder_FirstName")">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="LastName" class="form-label">@Localizer.GetKey("Label_LastName")</label>
                <input asp-for="LastName" class="form-control" placeholder="@Localizer.GetKey("Placeholder_LastName")">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>

        <div>
            <label asp-for="Age" class="form-label">@Localizer.GetKey("Label_Age")</label>
            <input asp-for="Age" class="form-control" type="number" min="1" max="120">
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Email" class="form-label">@Localizer.GetKey("Label_Email")</label>
            <input asp-for="Email" class="form-control" placeholder="@Localizer.GetKey("Placeholder_Email")">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Password" class="form-label">@Localizer.GetKey("Label_Password")</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="••••••" autocomplete="new-password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="ConfirmPassword" class="form-label">@Localizer.GetKey("Label_ConfirmPassword")</label>
            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="••••••" autocomplete="new-password">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <!-- Cloudflare Turnstile Widget -->
        <div id="turnstile-widget" class="d-flex justify-content-center my-3"></div>
        <button type="submit" class="btn btn-primary w-100 mt-2">@Localizer.GetKey("Button_CreateAccount")</button>

        <div class="text-center mt-3">
            @Localizer.GetKey("AlreadyHaveAccount") <a asp-action="Login" asp-route-returnUrl="@returnUrl">@Localizer.GetKey("Link_LoginHere")</a>
        </div>
    </form>
        </div>
    </div>
</div>    
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://challenges.cloudflare.com/turnstile/v0/api.js?render=explicit" async defer></script>
    <script>
        // Bot detection - timestamp field
        document.addEventListener("DOMContentLoaded", function() {
            var tsField = document.getElementById('registerTs');
            if(tsField) {
                tsField.value = Date.now();
            }
            
            // Render Turnstile widget explicitly
            function renderTurnstile() {
                var container = document.getElementById('turnstile-widget');
                if (container && typeof turnstile !== 'undefined') {
                    // Clear any existing widget
                    container.innerHTML = '';
                    // Render new widget
                    turnstile.render('#turnstile-widget', {
                        sitekey: '@ViewBag.TurnstileSiteKey',
                        theme: 'light',
                        callback: function(token) {
                            console.log('Turnstile verification complete');
                        }
                    });
                }
            }
            
            // Wait for Turnstile API to load, then render
            var renderInterval = setInterval(function() {
                if (typeof turnstile !== 'undefined') {
                    renderTurnstile();
                    clearInterval(renderInterval);
                }
            }, 100);
            
            // Prevent form submission if honeypot is filled
            var form = document.getElementById('registerForm');
            if(form) {
                form.addEventListener('submit', function(e) {
                    var honeypot = document.querySelector('input[name="honeypot"]');
                    var phone = document.querySelector('input[name="phone"]');
                    var website = document.querySelector('input[name="website"]');
                    
                    if((honeypot && honeypot.value) || (phone && phone.value) || (website && website.value)) {
                        e.preventDefault();
                        console.warn('Bot detected - honeypot filled');
                        alert('Form submission failed. Please try again.');
                        return false;
                    }
                });
            }
        });
    </script>
}