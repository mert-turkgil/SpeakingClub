@model IEnumerable<SpeakingClub.Entity.Quiz>

<div class="container my-5">
    <h2 class="text-center mb-4">Available Quizzes</h2>
    <div class="row">
        @foreach (var quiz in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 shadow-sm animate__animated animate__fadeInUp">
                    @* Optionally, add an image at the top of the card (use quiz-specific image or a default placeholder) *@
                    <img src="~/img/header_logo.png" class="card-img-top" alt="@quiz.Title" />
                    
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@quiz.Title</h5>
                        <p class="card-text text-truncate">
                            @if (!String.IsNullOrEmpty(quiz.Description))
                            {
                                @quiz.Description
                            }
                            else
                            {
                                <em>No description available.</em>
                            }
                        </p>
                        
                        <ul class="list-unstyled mb-3">
                            <li>
                                <i class="fas fa-chalkboard-teacher me-1"></i>
                                <small>
                                    @if (quiz.Teacher != null)
                                    {
                                        @($"{quiz.Teacher.FirstName} {quiz.Teacher.LastName}")
                                    }
                                    else
                                    {
                                        @("Unknown Instructor")
                                    }
                                </small>
                            </li>
                            <li>
                                <i class="fas fa-layer-group me-1"></i>
                                <small>
                                    @if (quiz.Category != null)
                                    {
                                        @quiz.Category.Name
                                    }
                                    else
                                    {
                                        @("General")
                                    }
                                </small>
                            </li>
                        </ul>

                        <div class="mt-auto">
                            <a asp-action="StartQuiz" asp-route-id="@quiz.Id" class="btn btn-primary btn-block">
                                <i class="fas fa-play me-1"></i> Start Quiz
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
