@model SpeakingClub.Models.BlogFilterViewModel
@inject LanguageService Localizer

@{
    ViewData["Title"] = Model.BlogList_Title;
}

@section Css {
    <link rel="stylesheet" href="https://unpkg.com/aos@2.3.4/dist/aos.css" />
    <style>
        :root {
            --color-lightest: #FFF5E4;
            --color-light:    #FFE3E1;
            --color-medium:   #FFD1D1;
            --color-accent:   #FF9494;
        }
        
        /* Hero Section */
        .blog-hero {
            background: linear-gradient(135deg, var(--color-lightest) 0%, var(--color-light) 100%);
            position: relative;
            overflow: hidden;
        }
        .blog-hero::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -20%;
            width: 60%;
            height: 150%;
            background: radial-gradient(circle, var(--color-accent) 0%, transparent 70%);
            opacity: 0.1;
        }
        
        /* Filter Sidebar */
        .filter-card {
            background: white;
            border-radius: 20px;
            padding: 2rem;
            box-shadow: 0 10px 40px rgba(0,0,0,0.08);
            position: sticky;
            top: 100px;
        }
        .filter-card .form-label {
            font-weight: 600;
            color: #333;
        }
        .filter-card .form-select,
        .filter-card .form-control {
            border-radius: 10px;
            border: 2px solid var(--color-light);
            padding: 10px 15px;
        }
        .filter-card .form-select:focus,
        .filter-card .form-control:focus {
            border-color: var(--color-accent);
            box-shadow: 0 0 0 3px rgba(255,148,148,0.2);
        }
        .filter-card .btn-check:checked + .btn-outline-success {
            background-color: var(--color-accent);
            border-color: var(--color-accent);
        }
        .filter-card .btn-outline-success {
            color: var(--color-accent);
            border-color: var(--color-accent);
            border-radius: 20px;
            margin: 2px;
        }
        .filter-card .btn-outline-success:hover {
            background-color: var(--color-accent);
            color: white;
        }
        
        /* Blog Cards */
        .blog-card {
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            border: none;
            border-radius: 20px;
            overflow: hidden;
            background: white;
            box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        }
        .blog-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(255,148,148,0.25);
        }
        .blog-card .card-img-wrapper {
            position: relative;
            overflow: hidden;
        }
        .blog-card img {
            object-fit: cover;
            height: 220px;
            width: 100%;
            transition: transform 0.5s ease;
        }
        .blog-card:hover img {
            transform: scale(1.1);
        }
        .blog-card .card-img-overlay-custom {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background: linear-gradient(transparent, rgba(0,0,0,0.7));
            padding: 20px;
        }
        .blog-card .card-body {
            padding: 1.5rem;
        }
        .blog-title {
            font-size: 1.15rem;
            font-weight: 700;
            margin: 0 0 10px 0;
            line-height: 1.4;
        }
        .blog-title a {
            color: #333;
            text-decoration: none;
            transition: color 0.3s ease;
        }
        .blog-title a:hover {
            color: var(--color-accent);
        }
        .blog-meta {
            font-size: 0.85rem;
            color: #888;
            display: flex;
            gap: 15px;
            margin-bottom: 12px;
        }
        .blog-meta i {
            color: var(--color-accent);
        }
        .blog-content {
            font-size: 0.95rem;
            color: #666;
            line-height: 1.6;
            margin-bottom: 15px;
        }
        .btn-read-more {
            background: linear-gradient(135deg, var(--color-accent) 0%, var(--color-medium) 100%);
            color: white;
            border: none;
            border-radius: 25px;
            padding: 8px 20px;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        .btn-read-more:hover {
            transform: translateX(5px);
            box-shadow: 0 5px 15px rgba(255,148,148,0.4);
            color: white;
        }
        
        /* Pagination */
        .pagination .page-link {
            border: none;
            border-radius: 10px;
            margin: 0 3px;
            color: var(--color-accent);
            font-weight: 600;
        }
        .pagination .page-item.active .page-link {
            background: linear-gradient(135deg, var(--color-accent) 0%, var(--color-medium) 100%);
            border: none;
        }
        .pagination .page-link:hover {
            background-color: var(--color-light);
        }
        
        /* Empty State */
        .empty-state {
            background: var(--color-lightest);
            border-radius: 20px;
            padding: 4rem 2rem;
        }
        .empty-state i {
            font-size: 4rem;
            color: var(--color-medium);
        }
    </style>
}

<!-- Blog Header Section -->
<section class="py-5 blog-hero text-center" data-aos="fade-down">
    <div class="container position-relative">
        <h1 class="display-4 fw-bold mb-3" style="color: var(--color-accent);">@Model.BlogList_Title</h1>
        <p class="lead text-muted mb-0" style="max-width: 600px; margin: 0 auto;">@Model.BlogList_Description</p>
        <p class="small text-muted mt-2">Showing <strong>@Model.TotalBlogs</strong> posts</p>
    </div>
</section>

<!-- Main Content Section -->
<div class="container my-5">
    <div class="row">
        <!-- Filter Section -->
        <div class="col-lg-3 col-md-4 mb-4" data-aos="fade-right">
            <div class="filter-card">
                <h4 class="fw-bold mb-4" style="color: var(--color-accent);">
                    <i class="bi bi-funnel me-2"></i>@Model.BlogList_SearchLabel
                </h4>
                <form method="get" action="@Url.Action("Blog", "Home")">
                    <!-- Category Filter -->
                    <div class="mb-4">
                        <label for="category" class="form-label">@Model.BlogList_AllCategories</label>
                        <select class="form-select" id="category" name="category">
                            @foreach (var cat in Model.Categories)
                            {
                                <option value="@cat" selected="@(cat == Model.Category ? "selected" : null)">@cat</option>
                            }
                        </select>
                    </div>

                    <!-- Tag Filter as Toggle Buttons -->
                    <div class="mb-4">
                        <label class="form-label">@Model.BlogList_TagLabel</label>
                        <div class="d-flex flex-wrap">
                            @if(Model.AvailableTags == null || !Model.AvailableTags.Any())
                            {
                                <span class="text-muted small">Keine Tags verf√ºgbar</span>
                            }
                            else
                            {
                                @foreach (var tag in Model.AvailableTags)
                                {
                                    <input type="radio" class="btn-check" name="tag" id="tag_@tag" value="@tag" autocomplete="off" @(tag == Model.Tag ? "checked" : "")>
                                    <label class="btn btn-outline-success btn-sm" for="tag_@tag">@tag</label>
                                }
                            }
                        </div>
                    </div>

                    <!-- Search Filter -->
                    <div class="mb-4">
                        <label for="searchTerm" class="form-label">@Model.BlogList_SearchLabel</label>
                        <div class="position-relative">
                            <input type="text" class="form-control" id="searchTerm" name="searchTerm" value="@Model.SearchTerm" placeholder="@Model.BlogList_SearchLabel" />
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn w-100 py-2" style="background: linear-gradient(135deg, var(--color-accent) 0%, var(--color-medium) 100%); color: white; border-radius: 10px; font-weight: 600;">
                        <i class="bi bi-search me-2"></i>@Model.BlogList_ApplyFiltersButton
                    </button>
                </form>
            </div>
        </div>

        <!-- Blog Content Section -->
        <div class="col-lg-9 col-md-8">
            <div class="row g-4">
                @if (Model.Blogs != null && Model.Blogs.Any())
                {
                    foreach (var blog in Model.Blogs)
                    {
                        <div class="col-md-6 col-lg-4" data-aos="fade-up">
                            <div class="card blog-card h-100">
                                <!-- Blog Image -->
                                <div class="card-img-wrapper">
                                    <img src="~/img/@(string.IsNullOrEmpty(blog.Image) ? "default-image.jpg" : blog.Image)"
                                         alt="@blog.Title"
                                         class="card-img-top"
                                         onerror="this.onerror=null;this.src='https://via.placeholder.com/300x200?text=Image+Unavailable';" />
                                </div>

                                <!-- Blog Body -->
                                <div class="card-body d-flex flex-column">
                                    <div class="blog-meta">
                                        <span><i class="bi bi-calendar3 me-1"></i> @blog.Date.ToString("dd MMM yyyy")</span>
                                        <span><i class="bi bi-person me-1"></i> @blog.Author</span>
                                    </div>
                                    <h5 class="blog-title">
                                        <a href="@Url.Action("BlogDetail", "Home", new { url = blog.Url })">
                                            @blog.Title
                                        </a>
                                    </h5>
                                    <div class="blog-content flex-grow-1">
                                        @if (blog.Content.Length > 100)
                                        {
                                            @Html.Raw(SpeakingClub.Services.HtmlUtility.GetExcerpt(blog.Content))
                                        }
                                        else
                                        {
                                            @Html.Raw(blog.Content)
                                        }
                                    </div>
                                    <a asp-controller="Home" asp-action="BlogDetail" asp-route-url="@blog.Url" class="btn btn-read-more align-self-start mt-auto">
                                        @Model.BlogList_ReadMore <i class="bi bi-arrow-right ms-1"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <div class="empty-state text-center">
                            <i class="bi bi-journal-x mb-3"></i>
                            <h4 class="text-muted">@Model.BlogList_NoPostsMessage</h4>
                        </div>
                    </div>
                }
            </div>

            <!-- Pagination -->
            <div class="row mt-5">
                <div class="col-12 d-flex justify-content-center">
                    <nav aria-label="Blog Pagination">
                        <ul class="pagination">
                            @for (var i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Blog", new { page = i, category = Model.Category, tag = Model.Tag, searchTerm = Model.SearchTerm })">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 1000,
            once: true
        });
    </script>
            <!-- GSAP -->
    <script src="~/lib/gsap/gsap.min.js"></script>
    <script src="~/lib/gsap/ScrollTrigger.min.js"></script>
    <script>
    gsap.registerPlugin(ScrollTrigger); // <-- Register explicitly
    </script>
            <script>
        var swiper = new Swiper('.blog-card .swiper', {
            loop: true,
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            },
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
        });

        gsap.from('.blog-card', {
            opacity: 0,
            y: 30,
            duration: 0.8,
            ease: "power2.out",
            scrollTrigger: {
                trigger: '.blog-card',
                start: "top 90%"
            }
        });

        document.querySelectorAll('.blog-card').forEach(card => {
            card.addEventListener('mouseenter', () => {
                gsap.to(card, { scale: 1.03, duration: 0.3 });
            });
            card.addEventListener('mouseleave', () => {
                gsap.to(card, { scale: 1, duration: 0.3 });
            });
        });
    </script>
}
